<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/frg_home_re_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/frg_home_bg">

    <Button
        android:id="@+id/mLeftMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/left_start" />

    <Button
        android:id="@+id/frg_home_dictionary"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/dictionary_normal_default" />


            <TextView
                android:id="@+id/countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划剩余"
                android:layout_below="@+id/frg_home_dictionary"
                android:layout_toStartOf="@+id/countdown_days"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/countdown_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="71"
                android:textSize="80dp"
                android:layout_below="@+id/countdown"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:layout_alignBaseline="@+id/countdown_days"
            android:layout_toStartOf="@+id/frg_home_dictionary"
            android:layout_marginRight="30dp" />


        <TextView
            android:id="@+id/progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yy"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/countdown_days"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="15dp"/>

        <com.example.menutest.SpringProgressView
            android:id="@+id/spring_progress_view"
            android:layout_width="match_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_height="20dp"
            android:layout_below="@+id/progress_tv"/>

        <TextView
            android:id="@+id/English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm a slow walker,but I never walk backwards."
            android:layout_below="@+id/spring_progress_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我走得很慢，但是我从来不会后退。"
            android:layout_below="@+id/English"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
>

    <Button
        android:id="@+id/fra_home_learn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fra_home_word_list"
        android:text="开始学习"
        android:background="@drawable/corner_bg_yellow"
        android:layout_marginBottom="15dp"
        android:textColor="@color/corner_bg"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/fra_home_word_list"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_bg"
        android:layout_alignParentBottom="true"
        android:text="单词列表"
        android:textColor="@color/tab_color"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    </RelativeLayout>




</RelativeLayout>



